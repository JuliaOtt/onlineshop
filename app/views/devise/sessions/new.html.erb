<div id="sign_in">
  <div class="row">
    <div class="col-md-6 col-sm-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
        <h2 class="form-signin-heading">Please sign in</h2>
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: true %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %> 
      <% end %> 

      <%= render "devise/shared/links" %>
    </div> <!-- end col-md-4 -->
  </div> <!-- end row -->
</div> <!-- end sign in-->
