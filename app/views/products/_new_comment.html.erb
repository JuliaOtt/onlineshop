<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build], remote: true, html: { class: "form-horizontal" }) do |f| %>
		<div class="form-group">
			<%= f.label :body, "Comments", class: "control-label" %><br>
			<%= f.text_area :body, class: "form-control", rows: "6"  %>
		</div>
		<div class="form-group">
			<div class="rating"></div>
		</div>
		<div class="form-group">
			<%= f.submit "Submit" %>
		</div>
	<% end %>
<% end %>
